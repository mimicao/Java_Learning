package com.random;

import java.util.Scanner;

public class Random {
	public static void main(String[] args) {
		int num = (int)(Math.random()*100)+1;
		int i = 0;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("请输入数字1-100: ");

		while(true) {
			if( i == num ) {
				break;
			}
			else {
				
			}
			i = sc.nextInt();
			System.out.println("答错了请重新输入：");
		}
		
	}
}
